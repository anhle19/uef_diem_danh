<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Điểm danh - Tên sự kiện</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <!-- SweetAlert2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.0/dist/sweetalert2.min.css"
          rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container py-5">
        <!-- Tiêu đề -->
        <h2 class="text-center mb-4">Điểm danh - Tên sự kiện</h2>

        <!-- Card Form -->
        <div class="card shadow mx-auto" style="max-width: 500px">
            <div class="card-body">
                <form id="attendanceForm">
                    <!-- Họ tên -->
                    <div class="mb-3">
                        <label for="fullName" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                        <input type="text"
                               class="form-control"
                               id="fullName"
                               name="fullName"
                               required
                               placeholder="Họ tên..." />
                    </div>

                    <!-- SĐT -->
                    <div class="mb-3">
                        <label for="phone" class="form-label">Số điện thoại <span class="text-danger">*</span></label>
                        <input type="tel"
                               class="form-control"
                               id="phone"
                               name="phone"
                               pattern="[0-9]{9,11}"
                               required
                               placeholder="VD: 0912345678" />
                    </div>

                    <!-- Đơn vị -->
                    <div class="mb-3">
                        <label for="organization" class="form-label">Đơn vị <span class="text-danger">*</span></label>
                        <input type="text"
                               class="form-control"
                               id="organization"
                               name="organization"
                               required
                               placeholder="Đơn vị..." />
                    </div>

                    <!-- Ngày sinh (optional) -->
                    <div class="mb-3">
                        <label for="dob" class="form-label">Ngày sinh (không bắt buộc)</label>
                        <input type="date" class="form-control" id="dob" name="dob" />
                    </div>

                    <!-- Submit -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Xác nhận điểm danh</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.0/dist/sweetalert2.all.min.js"></script>

    <!-- Xử lý form -->
    <script>
        document.getElementById("attendanceForm").addEventListener("submit", function (e) {
          e.preventDefault();

          const data = {
            fullName: document.getElementById("fullName").value,
            phone: document.getElementById("phone").value,
            organization: document.getElementById("organization").value,
            dob: document.getElementById("dob").value,
          };

          console.log("Thông tin điểm danh:", data);

          // Hiện thông báo SweetAlert2
          Swal.fire({
            icon: "success",
            title: "Điểm danh thành công!",
            text: "Cảm ơn bạn đã tham dự.",
            confirmButtonText: "OK",
          });

          this.reset();
        });
    </script>
</body>
</html>
