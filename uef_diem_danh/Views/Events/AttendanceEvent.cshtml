@model uef_diem_danh.Models.SuKien
@{
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Điểm danh - @Model.TieuDe</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- SweetAlert2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.0/dist/sweetalert2.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <div class="container py-5">
        <h2 class="text-center mb-2">Điểm danh</h2>
        <h2 class="text-center mb-4">@Model.TieuDe</h2>

        <div class="card shadow mx-auto" style="max-width: 500px">
            <div class="card-body">
                <form id="attendanceForm" action="/them-diem-danh-su-kien" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="MaSuKien" name="Id" value="@Model.Id" />

                    <div id="successMessage"></div>

                    <!-- Họ tên -->
                    <div class="mb-3">
                        <label for="fullName" class="form-label">Họ và tên <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="fullName" required placeholder="Họ tên..." />
                    </div>

                    <!-- SĐT -->
                    <div class="mb-3">
                        <label for="phone" class="form-label">Số điện thoại <span class="text-danger">*</span></label>
                        <input type="tel" class="form-control" id="phone" pattern="[0-9]{9,11}" required placeholder="VD: 0912345678" />
                    </div>

                    <!-- Đơn vị -->
                    <div class="mb-3">
                        <label for="organization" class="form-label">Đơn vị <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="organization" required placeholder="Đơn vị..." />
                    </div>

                    <!-- Ngày sinh -->
                    <div class="mb-3">
                        <label for="dob" class="form-label">Ngày sinh (không bắt buộc)</label>
                        <input type="date" class="form-control" id="dob" />
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary" id="submitBtn">Xác nhận điểm danh</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.10.0/dist/sweetalert2.all.min.js"></script>
    <!-- Axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <script>
            document.getElementById("attendanceForm").addEventListener("submit", function (e) {
                e.preventDefault();

                const formData = new FormData();
                formData.append("Id", document.getElementById("MaSuKien").value);
                formData.append("Name", document.getElementById("fullName").value.trim());
                formData.append("PhoneNumber", document.getElementById("phone").value.trim());
                formData.append("Unit", document.getElementById("organization").value.trim());
                formData.append("Dob", document.getElementById("dob").value);
                formData.append("__RequestVerificationToken", document.querySelector('input[name="__RequestVerificationToken"]').value);


                axios.post("/them-diem-danh-su-kien", formData)
                    .then(res => {
                        Swal.fire({
                            icon: "success",
                            title: "Điểm danh thành công!",
                            text: res.data?.message || "Cảm ơn bạn đã tham dự.",
                            confirmButtonText: "OK"
                        });
                        document.getElementById("successMessage").innerHTML = '<div class="bg-success p-2 text-white text-center">Điểm danh thành công</div>';
                        document.getElementById("submitBtn").disabled = true;
                    })
                    .catch(err => {
                        Swal.fire("Lỗi", err.response?.data?.message || "Không thể điểm danh. Vui lòng thử lại!", "error");
                        console.error(err);
                    });
        });

    </script>
</body>
</html>
