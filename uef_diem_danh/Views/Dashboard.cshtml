@{
    Layout = "~/Views/Layout/Main.cshtml";
    ViewData["Title"] = "Trang chủ";
}

<main class="p-4">
    <h2 class="table-title">Trang chủ</h2>
    <div class="row g-4">
        <!-- Học viên -->
        <div class="col-md-2 card-box">
            <div class="card card-glass shadow-sm text-center">
                <div class="card-body d-flex align-items-center gap-5">
                    <div class="info-box">
                        <i class="bi bi-people text-primary fs-3"></i>
                        <h6 class="mt-2">Học viên</h6>
                    </div>
                    <h3 class="fw-bold">1250</h3>
                </div>
            </div>
        </div>

        <!-- Giáo viên -->
        <div class="col-md-2 card-box">
            <div class="card card-glass shadow-sm text-center">
                <div class="card-body d-flex align-items-center gap-5">
                    <div class="info-box">
                        <i class="bi bi-person-badge text-success fs-3"></i>
                        <h6 class="mt-2">Giáo viên</h6>
                    </div>
                    <h3 class="fw-bold">140</h3>
                </div>
            </div>
        </div>

        <!-- Lớp học -->
        <div class="col-md-2 card-box">
            <div class="card card-glass shadow-sm text-center">
                <div class="card-body d-flex align-items-center gap-5">
                    <div class="info-box">
                        <i class="bi bi-house text-warning fs-3"></i>
                        <h6 class="mt-2">Lớp học</h6>
                    </div>
                    <h3 class="fw-bold">18</h3>
                </div>
            </div>
        </div>

        <!-- Buổi học -->
        <div class="col-md-2 card-box">
            <div class="card card-glass shadow-sm text-center">
                <div class="card-body d-flex align-items-center gap-5">
                    <div class="info-box">
                        <i class="bi bi-calendar-check text-danger fs-3"></i>
                        <h6 class="mt-2">Buổi học</h6>
                    </div>
                    <h3 class="fw-bold">120</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Biểu đồ -->
    <div class="charts mt-4">
        <div class="chart-card">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <canvas id="studentsChart" height="150"></canvas>
                </div>
            </div>
        </div>
        <div class="chart-card">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <canvas id="attendanceChart" height="150"></canvas>
                </div>
            </div>
        </div>
        <div class="chart-card">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <canvas id="sessionsChart" height="150"></canvas>
                </div>
            </div>
        </div>
        <div class="chart-card">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <canvas id="classesChart" height="150"></canvas>
                </div>
            </div>
        </div>
    </div>
</main>

<script src="/js/Dashboard.js"></script>
