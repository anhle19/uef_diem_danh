@{
}
@model uef_diem_danh.DTOs.StaffDeleteRequest

<div class="modal fade"
	 id="popupXoaNhanVien"
	 tabindex="-1"
	 aria-labelledby="popupXoaNhanVienLabel"
	 aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<form class="modal-content" method="POST" action="/xoa-nhan-vien" id="deleteStaffForm">
			@Html.AntiForgeryToken()
			<input type="hidden" id="xoaMaNhanVien" name="Id" class="form-control" />

			<div class="modal-header">
				<h5 class="modal-title" id="popupNhanVienLabel">Xác nhận xoá</h5>
				<button type="button"
						class="btn-close"
						data-bs-dismiss="modal"
						aria-label="Đóng"></button>
			</div>
			<div class="modal-body">Bạn có chắc chắn muốn xoá nhân viên này không?</div>
			<div class="modal-footer">
				<button type="button"
						class="btn-next-secondary"
						data-bs-dismiss="modal">
					Huỷ
				</button>
				<button type="submit"
						class="btn-next-primary"
						id="btnXacNhanXoaNhanVien"
						form="deleteStaffForm">
					Xoá
				</button>
			</div>
		</form>
	</div>
</div>
