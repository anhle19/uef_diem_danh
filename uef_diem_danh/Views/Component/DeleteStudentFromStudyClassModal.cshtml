@{
}

@model uef_diem_danh.DTOs.StudyClassRemoveStudentRequest

<div class="modal fade"
	 id="popupXoaHocVienCuaLopHoc"
	 tabindex="-1"
	 aria-labelledby="popupXoaHocVienCuaLopHocLabel"
	 aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<form class="modal-content" method="POST" action="/quan-ly-danh-sach-lop-hoc/@ViewBag.StudyClassId/xoa-hoc-vien-khoi-lop-hoc">
			@Html.AntiForgeryToken()
			<input type="hidden" id="removeStudentIdInput" name="StudentId" class="form-control" />

			<div class="modal-header">
				<h5 class="modal-title" id="popupXoaLopLabel">Xác nhận xoá</h5>
				<button type="button"
						class="btn-close"
						data-bs-dismiss="modal"
						aria-label="Đóng"></button>
			</div>
			<div class="modal-body">Bạn có chắc chắn muốn xoá học viên ra khỏi lớp này không?</div>
			<div class="modal-footer">
				<button type="button"
						class="btn-next-secondary"
						data-bs-dismiss="modal">
					Huỷ
				</button>
				<button type="submit"
						class="btn-next-primary"
						id="btnXacNhanXoaHocVienCuaLopHoc">
					Xoá
				</button>
			</div>
		</form>
	</div>
</div>