@model uef_diem_danh.Models.HocVien

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thẻ Học Viên</title>
    <!-- Thư viện CSS của Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" xintegrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-color: #f8f9fa;
        }
        /* Tùy chỉnh kích thước thẻ để giống thẻ học viên */
        .student-card {
            width: 367px; /* Chiều rộng cố định */
            height: 520px; /* Chiều cao cố định */
            border-radius: 15px; /* Bo tròn góc */
            box-shadow: 0 4px 8px rgba(0,0,0,0.1); /* Tạo bóng đổ */
            overflow: hidden; /* Ẩn các phần nội dung tràn ra ngoài */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .card-top {
            flex: 1; /* phần giữa chiếm chỗ còn lại */
            min-height: 0; /* QUAN TRỌNG để overflow hoạt động đúng */
            display: flex;
            flex-direction: column;
        }

        .card-img-top {
            width: 180px; /* Kích thước ảnh */
            height: 180px;
            object-fit: cover; /* Đảm bảo ảnh không bị méo */
            border-radius: 10px; /* Bo tròn góc ảnh để có hình vuông bo góc */
            border: 4px solid #ffffff; /* Viền trắng cho ảnh */
            margin-top: 25px;
        }

        .card-body h5 {
            font-size: 2.3rem; /* Tăng kích thước font tên */
            font-weight: 700;
        }

        .card-body p {
            font-size: 1.2rem; /* Giảm kích thước font các thông tin khác */
            margin-bottom: 5px;
        }

        .card-footer {
            background-color: #0d6efd; /* Màu nền cho footer */
            color: #ffffff; /* Màu chữ trắng */
            font-size: 0.8rem;
            text-align: center;
        }

        .barcode-section {
            padding: 5px 0;
            background-color: #ffffff;
            border-top: 1px solid #e9ecef;
        }

        /* CẮT DÒNG + … cho các giá trị dài */
        .value {
            display: -webkit-box;
            line-clamp: 2; /* tối đa 2 dòng*/
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
            word-break: break-word;
            line-height: 1.2;
        }

        /* Nhãn trên – giá trị dưới cho gọn */
        .label {
            display: block;
            font-weight: 700;
            line-height: 1.2;
            margin-bottom: 2px;
        }

        .print-btn-container {
            position: fixed;
            top: 10px;
            right: 10px;
        }

        .print-btn {
            background-color: #0d6efd;
            border: 0;
            border-radius: 50%;
            transition: background-color 0.15s ease;
        }

            .print-btn:hover {
                background-color: #0b55d4;
            }
    </style>
</head>
<body class="d-flex justify-content-center align-items-center vh-100 vw-100">

    

    <div id="sheet" class="d-flex justify-content-center align-items-center">
        <div class="card student-card text-center">
            <div class="card-top">
                <div class="d-flex justify-content-center align-items-center px-2 pt-2">
                    <img src="@Url.Content("~/student_pictures/logo.png")" alt="logo" width="55" height="55">
                    <p class="mb-0" style="font-size: 20px;">TRUNG TÂM CHÍNH TRỊ PHƯỜNG XUÂN HÒA</p>
                </div>

                <img id="studentAvatarInfo" src="@Url.Content("~/student_pictures/" + Model.HinhAnh.Name)" class="card-img-top mx-auto d-block" alt="Ảnh đại diện">
                <div class="card-body">
                    <p id="studentFullNameInfo" class="text-start text-muted"><strong>Họ và tên:</strong> </p>
                    <p class="text-start text-muted">@Model.Ho @Model.Ten</p>
                    <p id="studentStudyCenterInfo" class="text-start text-muted"><strong>Đơn vị:</strong> </p>
                    <p class="text-start text-muted">@Model.DonVi</p>
                </div>
            </div>
            <div class="barcode-section">
                <svg id="studentBarcode" data-phone="@Model.SoDienThoai"></svg>
            </div>
        </div>
    </div>

    <!-- Thư viện JS của Bootstrap 5 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" xintegrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <!-- Thư viện JsBarcode -->
    <script src="https://cdn.jsdelivr.net/npm/jsbarcode@3.11.5/dist/JsBarcode.all.min.js"></script>
</body>
</html>

