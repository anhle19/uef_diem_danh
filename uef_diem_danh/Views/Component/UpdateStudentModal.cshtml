@{
}
<div class="modal fade"
	 id="popupSuaHocVien"
	 tabindex="-1"
	 aria-labelledby="popupSuaHocVienLabel"
	 aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="popupSuaHocVienLabel">Sửa học viên</h5>
				<button type="button"
						class="btn-close"
						data-bs-dismiss="modal"
						aria-label="Đóng"></button>
			</div>
			<div class="modal-body">
				<form method="POST" action="/cap-nhat-hoc-vien" id="updateStudentForm">
					@Html.AntiForgeryToken()
					<input type="hidden" id="suaMaHocVien" name="MaHocVien" class="form-control" />

					<div class="mb-2">
						<label class="form-label">Họ <span class="text-danger">*</span></label>
						<input type="text"
							   id="suaHo"
							   name="Ho"
							   class="form-control"
							   placeholder="VD: Nguyễn Văn" />
					</div>
					<div class="mb-2">
						<label class="form-label">Tên  <span class="text-danger">*</span></label>
						<input type="text"
							   id="suaTen"
							   name="Ten"
							   class="form-control"
							   placeholder="VD: Khiêm" />
					</div>
					<div class="mb-2">
						<label class="form-label">Ngày sinh <span class="text-danger">*</span></label>
						<input type="date"
							   id="suaNgaySinh"
							   name="NgaySinh"
							   class="form-control" />
					</div>
					<div class="mb-2">
						<label class="form-label">Địa chỉ <span class="text-danger">*</span></label>
						<input type="text"
							   id="suaDiaChi"
							   name="DiaChi"
							   class="form-control"
							   placeholder="VD: TP.HCM" />
					</div>
					<div class="mb-2">
						<label class="form-label">Email <span class="text-danger">*</span></label>
						<input type="text"
							   id="suaEmail"
							   name="Email"
							   class="form-control"
							   placeholder="VD: abc@gmail.com" />
					</div>
					<div class="mb-2">
						<label class="form-label">Số điện thoại <span class="text-danger">*</span></label>
						<input type="text"
							   id="suaSoDienThoai"
							   name="SoDienThoai"
							   class="form-control"
							   placeholder="VD: 098........" />
					</div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button"
						class="btn-next-secondary"
						data-bs-dismiss="modal">
					Đóng
				</button>
				<button type="button"
						class="btn-next-primary"
						id="btnLuuSuaHocVien"
						onclick="updateStudent()"
						form="updateStudentForm">
					Lưu thay đổi
				</button>
			</div>
		</div>
	</div>
</div>