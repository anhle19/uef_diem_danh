@model uef_diem_danh.DTOs.StudentCreateNewToClassRequest
@{
}
<div class="modal fade"
	 id="popupThemHocVien"
	 tabindex="-1"
	 aria-labelledby="popupThemHocVienLabel"
	 aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="popupThemHocVienLabel">Thêm học viên</h5>
				<button type="button"
						class="btn-close"
						data-bs-dismiss="modal"
						aria-label="Đóng"></button>
			</div>
			<div class="modal-body">
				<div id="searchMessage"></div> <!-- chỗ hiện thông báo -->

				<div class="border-bottom">
					<form style="width: 100%; margin-top: 10px; margin-bottom: 20px"
						  onsubmit="return preventSearchAvailableStudentInputSubmit()">

						<div class="mb-2">
							<label class="form-label">Tìm theo sđt</label>
							<input type="text"
								   id="timSdt"
								   name="PhoneNumber"
								   class="form-control"
								   placeholder="VD: 098..." />
						</div>

						<div class="d-flex justify-content-end">
							<button type="button"
									class="btn-next-secondary btn-sm"
									id="btnSearch"
									onclick="searchAvailableStudent()">
								Tìm
							</button>
						</div>
					</form>

				</div>
				<br class="mb-0"/>
				<div>
					<form method="POST" action="/tao-hoc-vien-moi-vao-lop" id="createStudentForm">
						@Html.AntiForgeryToken()
						<input type="hidden" id="themMaLopHoc" name="MaLopHoc" class="form-control" />

						<div class="mb-2">
							<label class="form-label">Họ <span class="text-danger">*</span></label>
							<input type="text"
								   id="themHo"
								   name="Ho"
								   class="form-control"
								   placeholder="VD: Triệu Gia" />
						</div>
						<div class="mb-2">
							<label class="form-label">Tên  <span class="text-danger">*</span></label>
							<input type="text"
								   id="themTen"
								   name="Ten"
								   class="form-control"
								   placeholder="VD: Khiêm" />
						</div>
						<div class="mb-2">
							<label class="form-label">Ngày sinh <span class="text-danger">*</span></label>
							<input type="date"
								   id="themNgaySinh"
								   name="NgaySinh"
								   class="form-control" />
						</div>
						<div class="mb-2">
							<label class="form-label">Địa chỉ <span class="text-danger">*</span></label>
							<input type="text"
								   id="themDiaChi"
								   name="DiaChi"
								   class="form-control"
								   placeholder="VD: TP.HCM" />
						</div>
						<div class="mb-2">
							<label class="form-label">Email <span class="text-danger">*</span></label>
							<input type="text"
								   id="themEmail"
								   name="Email"
								   class="form-control"
								   placeholder="VD: abc@gmail.com" />
						</div>
						<div class="mb-2">
							<label class="form-label">Số điện thoại <span class="text-danger">*</span></label>
							<input type="text"
								   id="themSoDienThoai"
								   name="SoDienThoai"
								   class="form-control"
								   placeholder="VD: 098........" />
						</div>
					</form>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button"
						class="btn-next-secondary"
						data-bs-dismiss="modal">
					Đóng
				</button>
				<button type="button"
						class="btn-next-primary"
						id="btnLuuHocVienMoi"
						onclick="addStudent()"
						form="createStudentForm">
					Lưu
				</button>
			</div>
		</div>
	</div>
</div>
