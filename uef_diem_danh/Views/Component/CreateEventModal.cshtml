@model uef_diem_danh.DTOs.EventCreateRequest

<style>

	.create-event-avatar-input {
		width: 100px;
		height: 100px;
		border-radius: 10px;
		border: 1px dashed black
	}

	.overlay-layer {
		display: flex;
		flex-direction: column;
		justify-content: center;
		text-align: center;
		color: rgba(255, 255, 255, 0);
		background-color: rgba(0, 0, 0, 0);
		width: 100%;
		height: 100%;
		border-radius: 10px;
		position: absolute;
		top: 0;
		left: 0;
		transition: background-color 0.2s ease, color 0.2s ease;
	}

		.overlay-layer:hover {
			color: rgba(255, 255, 255, 1);
			background-color: rgba(0, 0, 0, 0.7);
		}
</style>

<div class="modal fade"
	 id="popupThemSuKien"
	 tabindex="-1"
	 aria-labelledby="popupThemSuKienLabel"
	 aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="popupThemSuKienLabel">Thêm sự kiện</h5>
				<button type="button"
						class="btn-close"
						data-bs-dismiss="modal"
						aria-label="Đóng"></button>
			</div>
			<div class="modal-body">
				<form method="POST" action="/tao-su-kien" id="createEventForm" enctype="multipart/form-data">
					@Html.AntiForgeryToken()

                    <div class="mb-2">
                        <label class="form-label">Tiêu đề<span class="text-danger">*</span></label>
                        <input type="text"
                               id="themTieuDe"
                               name="TieuDe"
                               class="form-control"
                               placeholder="Tiêu đề..." />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Người phụ trách<span class="text-danger">*</span></label>
						<select id="themNguoiPhuTrach"
								name="MaNguoiPhuTrach"
								class="form-control">
						</select>

                    </div>
                    <div class="mb-2">
                        <label class="form-label">Số lượng dự kiến<span class="text-danger">*</span></label>
                        <input type="number"
                               id="themSoLuongDuKien"
                               name="SoluongDuKien"
                               class="form-control"
                               placeholder="0"
                               min="0"
                               oninput="this.value = this.value.replace(/[^0-9]/g, '')" />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Thời gian<span class="text-danger">*</span></label>
						<input type="datetime-local" id="themThoiGian" name="ThoiGian" class="form-control" />
                    </div>
				</form>
			</div>
			<div class="modal-footer">
				<button type="button"
						class="btn-next-secondary"
						data-bs-dismiss="modal">
					Đóng
				</button>
				<button type="button"
						class="btn-next-primary"
						id="btnLuuSuKienMoi"
						onclick="addEvent()"
						form="createEventForm">
					Lưu
				</button>
			</div>
		</div>
	</div>
</div>
