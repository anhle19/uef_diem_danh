@model List<uef_diem_danh.DTOs.StudyClassListManagementDto>
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Danh sách lớp học</title>
</head>
<body>
    <h2>Danh sách lớp học</h2>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Study Class Name</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Created At</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var studyClass in Model)
            {
                <tr>
                    <td>@studyClass.Id</td>
                    <td>@studyClass.StudyClassName</td>
                    <td>@studyClass.StartDate.ToString("dd/MM/yyyy")</td>
                    <td>@studyClass.EndDate.ToString("dd/MM/yyyy")</td>
                    <td>@studyClass.CreatedAt.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>